<Window x:Class="AudioPlayer.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioPlayer"
        mc:Ignorable="d"
        
        Title="SettingsWindow" Height="410.387" Width="727.113">
    <StackPanel>
        <TextBlock FontSize="28" FontWeight="Bold" HorizontalAlignment="Center">Settings</TextBlock>
        <StackPanel Orientation="Horizontal">
            <TextBlock FontSize="22" Margin="30 0 0 0">Login:</TextBlock>
            <TextBox Margin="30 10 30 10" Width="200"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock FontSize="22" Margin="30 0 0 0">Volume:</TextBlock>
            <Slider Margin="30 10 30 10"  Width="200" Value="0.5" Maximum="1" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock FontSize="22" Margin="30 0 0 0">Simple view:</TextBlock>
            <CheckBox Margin="30 10 30 10"   />
        </StackPanel>

        <Button FontSize="20" Margin="30 0 0 0" Width="250" HorizontalAlignment="Left">Change main directory</Button>
        <Button HorizontalAlignment="Right" Margin="30 10 30 10"  Width="80">Ok</Button>
    </StackPanel>
</Window>
