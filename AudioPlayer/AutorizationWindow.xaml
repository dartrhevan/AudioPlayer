<Window x:Class="AudioPlayer.AutorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioPlayer"
        mc:Ignorable="d"
        Title="AutorizationWindow" Height="200" Width="400" WindowStyle="ToolWindow" MaxWidth="400" MaxHeight="200" MinWidth="400" MinHeight="200">
    <StackPanel>
        <Label FontSize="16" Margin="0, 0, 0, 5">Enter login:</Label>
        <TextBox FontSize="16" Margin="50,0,50,5" Height="25"></TextBox>
        <Label FontSize="16" Margin="0, 0, 0, 5" AllowDrop="True">Enter password:</Label>
        <PasswordBox FontSize="16" Margin="50,0,50,5" Height="25"></PasswordBox>
        <Button FontSize="16" Margin="155,0,156.6,5" Height="29" Content="OK" Click="ButtonClick"/>
    </StackPanel>
</Window>
