<Window x:Class="AudioPlayer.AutorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioPlayer"
        mc:Ignorable="d"
        Title="AuthorizationWindow" Height="300" Width="400" WindowStyle="ToolWindow" Background="LightGray" MaxWidth="400" MaxHeight="300" MinWidth="400" MinHeight="300">
    <StackPanel>
        <Label  FontSize="18" Margin="0, 0, 0, 5" HorizontalAlignment="Center" FontWeight="Bold">Autorization</Label>
        <Label FontSize="16" Margin="0, 0, 0, 5">Enter login:</Label>
        <TextBox FontSize="16" Margin="50,0,50,5" Height="25" Name="Login"></TextBox>
        <Label FontSize="16" Margin="0, 0, 0, 5" AllowDrop="True">Enter password:</Label>
        <PasswordBox FontSize="16" Margin="50,0,50,5" Height="25" Name="Password"></PasswordBox>
        <Label Name="ErrorLabel" FontSize="14" Foreground="Red"></Label>
        <Button FontSize="16" Margin="155,0,156.6,5" Height="29" ForceCursor="true" Cursor="Hand" Background="Gray" Content="OK" Click="LoginButtonClick"/>
        <Button FontSize="16" Margin="155,0,156.6,5" Height="29" ForceCursor="true" Cursor="Hand" Background="Gray" Content="Register" Click="RegisterButtonOnClick"/>

    </StackPanel>
</Window>
